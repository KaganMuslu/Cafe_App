
@{
    ViewData["Title"] = "Ürün";
}
@model Urun

<!-- CSS Ekstralar -->
<head>
	<link href="~/admin_panel/vendor/bootstrap-datepicker-master/css/bootstrap-datepicker.min.css" rel="stylesheet" />
	<link href="~/admin_panel/vendor/select2/css/select2.min.css" rel="stylesheet" />
	<link href="~/admin_panel/vendor/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
</head>

<div class="content-body">
	<div class="container-fluid">
		<!-- Row -->

		<div class="form-head d-flex mb-3 align-items-start">
			<div class="me-auto d-none d-lg-block">
				<h2 class="text-primary font-w600 mb-0">Cafe App Ürün</h2>
				<p class="mb-0">Cafe App Ürün Yönetim Ekranına Hoşgeldiniz!</p>
			</div>

			<a data-bs-toggle="modal" data-bs-target="#ürünModal" style="width:max-content; display: inline-block; vertical-align: middle;" type="button" class="btn btn-rounded btn-primary">
				<span class="btn-icon-start text-primary">
					<i class="fa fa-user-plus color-primary"></i>
				</span>Ürün Ekle
			</a>
		</div>
		<br>

		<div class="filter cm-content-box box-primary">
			<div class="content-title">
				<div class="cpa">
					<i class="fa-solid fa-filter me-2"></i>Filtrele
				</div>
				<div class="tools">
					<a href="javascript:void(0);" class="expand SlideToolHeader"><i class="fal fa-angle-down"></i></a>
				</div>
			</div>
			<div class="cm-content-body form excerpt">
				<div class="card-body">
					<div class="row">
						<div class="col-xl-3 col-sm-6">
							<input type="text" class="form-control mb-3 mb-xl-0" id="exampleFormControlInput1" placeholder="Ürün Adı">
						</div>
						<div class="col-xl-3 col-sm-6 mb-3 mb-xl-0">
							<select class="default-select dashboard-select-2 wide w-100">
								<option selected>Personel Rolü</option>
								<option value="1">Published</option>
								<option value="2">Draft</option>
								<option value="3">Trash</option>
								<option value="4">Private</option>
								<option value="5">Pending</option>
							</select>
						</div>
						<div class="col-xl-3 col-sm-6">
							<input id="datepicker" class=" form-control mb-3 mb-xl-0">
						</div>
						<div class="col-xl-3 col-sm-6">
							<button class="btn btn-primary" title="Aramak İçin Tıklayın" type="button"><i class="fa fa-search me-1"></i>Filtrele</button>
							<button class="btn btn-danger light" title="Filtreyi Kaldırmak İçin Tıklayın" type="button">Kaldır</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="filter cm-content-box box-primary">
			<div class="content-title">
				<div class="cpa">
					<i class="fa-solid fa-file-lines me-1"></i>Ürün Listesi
				</div>
				<div class="tools">
					<a href="javascript:void(0);" class="expand SlideToolHeader"><i class="fal fa-angle-down"></i></a>
				</div>
			</div>
			<div class="cm-content-body form excerpt">
				<div class="card-body">
					<div class="table-responsive">

						<table class="table table-responsive-sm mb-0">
							<thead>
								<tr>
									<th><strong>Id</strong></th>
									<th><strong>Ad</strong></th>
									<th><strong>Açıklama</strong></th>
									<th><strong>Detay</strong></th>
									<th><strong>KATEGORİ</strong></th>
									<th><strong>Fİyat</strong></th>
									<th><strong>İNDİRİMLİ FİYAT</strong></th>
									<th><strong>GÖRÜNÜRLÜK</strong></th>
									<th width="12%" ><strong>İşlemler</strong></th>
								</tr>
							</thead>
							<tbody>

								@foreach (var urun in ViewBag.Urunler)
								{
									<tr>
										<th>@urun.Id</th>
										<td><div class="d-flex align-items-center"><img src="~/img/@urun.Fotograf" class="rounded-lg me-2" width="24" alt=""> <span class="w-space-no">@urun.Ad</span></div></td>
										<td>@urun.Aciklama</td>
										<td>@urun.Detay</td>
										<td>@urun.Kategori.Ad</td>
										<td>₺@urun.Fiyat</td>
										<td>₺@(urun.Fiyat-urun.IndirimliFiyat)</td>
										@if (urun.Gorunurluk == true)
										{
											<td class="recent-stats"><i class="fa fa-circle text-success me-1"></i>Görünür</td>
										}
										else
										{
											<td class="recent-stats"><i class="fa fa-circle text-danger me-1"></i>Görünmez</td>
										}
										<td>
											<a data-bs-toggle="modal" data-bs-target="#ürünMalzemeModal" data-urunid="@urun.Id" class="btn btn-warning shadow btn-xs sharp rounded-circle me-1"><i class="fa fa-wheat"></i></a>
											<a asp-action="UrunGuncelle" asp-route-id="@urun.Id" class="btn btn-primary shadow btn-xs sharp rounded-circle me-1"><i class="fa fa-pencil"></i></a>
											@if (urun.Gorunurluk == true)
											{
												<a asp-action="UrunSil" asp-route-id="@urun.Id" class="btn btn-danger shadow btn-xs sharp rounded-circle"><i class="fa-solid fa-trash"></i></a>
											}
											else
											{
												<a asp-action="UrunSil" asp-route-id="@urun.Id" class="btn btn-danger shadow btn-xs sharp rounded-circle"><i class="fa fa-trash-undo"></i></a>
											}
										</td>
									</tr>
								}

							</tbody>
						</table>

					</div>
					<div class="d-flex align-items-center justify-content-xl-between flex-wrap justify-content-center mt-3">
						<small>3 sayfa içerisinden 1 numaralı sayfa gösteriliyor</small>
						<nav aria-label="Page navigation example">
							<ul class="pagination mb-2 mb-sm-0">
								<li class="page-item"><a class="page-link" href="javascript:void(0);"><i class="fa-solid fa-angle-left"></i></a></li>
								<li class="page-item"><a class="page-link" href="javascript:void(0);">1</a></li>
								<li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
								<li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
								<li class="page-item"><a class="page-link " href="javascript:void(0);"><i class="fa-solid fa-angle-right"></i></a></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal modal-lg fade" id="ürünModal">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Ürün Ekle</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal">
				</button>
			</div>

			<form asp-action="Index" class="needs-validation " method="post">
				<div class="modal-body">
					<div style="margin-bottom:14px" class="row">
						<div class="form-floating col-md-6 mb-3">
							<input id="Ad" asp-for="Ad" type="text" class="form-control" placeholder="">
							<label for="Ad" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Adı</label>
							<div class="valid-feedback">Valid.</div>
							<div class="invalid-feedback">Please fill out this field.</div>
						</div>
						<div class="form-floating col-md-6 mb-3">
							<input id="Aciklama" asp-for="Aciklama" type="text" class="form-control" placeholder="" required="">
							<label for="Aciklama" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Açıklama</label>
							<div class="invalid-feedback">
								Zorunlu Alan
							</div>
						</div>
					</div>
					<div style="margin-bottom:14px" class="row">
						<div class="form-floating col-md-6 mb-3">
							<input id="Detay" asp-for="Detay" type="text" class="form-control" placeholder="" required="">
							<label for="Detay" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Detay</label>
							<div class="invalid-feedback">
								Zorunlu Alan
							</div>
						</div>
						<div class="form-floating col-md-6 mb-3">
							<input id="Fiyat" asp-for="Fiyat" type="text" class="form-control" placeholder="" required="">
							<label for="Fiyat" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Fiyat</label>
							<div class="invalid-feedback">
								Zorunlu Alan
							</div>
						</div>
					</div>
					<div style="margin-bottom:14px" class="row">
						<div class="form-floating col-md-6 mb-3">
							<input id="Fotograf" asp-for="Fotograf" type="text" class="form-control" placeholder="" required="">
							<label for="Fotograf" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Fotoğraf</label>
							<div class="invalid-feedback">
								Zorunlu Alan
							</div>
						</div>
						<div class="col-md-6 mb-3">
							<select id="KategoriId" asp-for="KategoriId" class="default-select form-control wide w-100 required">
								<option selected>Ürün Kategori</option>
								@foreach (var item in ViewBag.Kategoriler)
								{
									<option value="@item.Id">@item.Ad</option>
								}
							</select>
							<div class="invalid-feedback">
								Zorunlu Alan
							</div>
						</div>
					</div>
					<input asp-for="Gorunurluk" type="hidden" class="form-control" placeholder="" value=True required="">
					<input asp-for="Akitf" type="hidden" class="form-control" placeholder="" value=True required="">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Kapat</button>
					<button type="submit" class="btn btn-primary">Kaydet</button>
				</div>
			</form>

		</div>
	</div>
</div>

<div class="modal modal-md fade" id="ürünMalzemeModal">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Malzemeleri Seç</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal">
				</button>
			</div>
			<form asp-action="MalzemeSec" class="needs-validation" method="post">
				<input type="hidden" name="urunId" id="urunId" value="">
				<input type="hidden" name="secilenMalzemeler" id="secilenMalzemeler" value="">
				<div class="modal-body">
					<div id="DZ_W_Todo4" class="widget-media dz-scroll" style="height:280px; padding:20px">
						<ul class="timeline">
							@foreach (var item in ViewBag.Malzemeler)
							{
								<li>
									<div class="timeline-panel">
										<input type="hidden" name="MalzemeId" value="@item.Id" />
										<div class="form-check custom-checkbox checkbox-success check-lg me-3">
											<input type="checkbox" class="form-check-input toggleInput">
										</div>
										<div class="media-body">
											<h5 class="form-check-label">@item.Ad</h5>
											<small class="text-muted">@item.Tur  <strong class="text-success">₺@item.Fiyat</strong></small>
										</div>
										<div class="dropdown">
											<input type="text" class="form-control mb-3 mb-xl-0 miktarInput"  placeholder="Miktar" style="display: none;">
										</div>
									</div>
								</li>
							}
						</ul>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Kapat</button>
					<button type="submit" class="btn btn-primary">Kaydet</button>
				</div>
			</form>

		</div>
	</div>
</div>

<!-- JS Ekstralar -->
@section Scripts
{
	<script src="~/admin_panel/vendor/bootstrap-datepicker-master/js/bootstrap-datepicker.min.js"></script>
	<script src="~/admin_panel/vendor/select2/js/select2.full.min.js"></script>
	<script src="~/admin_panel/js/dashboard/cms.js"></script>
	<script src="~/admin_panel/vendor/ckeditor/ckeditor.js"></script>
	<script src="~/admin_panel/vendor/datatables/js/jquery.datatables.min.js"></script>

	<script>
		$(function () {
			$("#datepicker").datepicker({
				language: 'tr',
				format: 'dd/mm/yyyy',
				autoclose: true,
				todayHighlight: true
			}).datepicker('update', new Date());

		});

		$(function () {
			$("#datepicker2").datepicker({
				language: 'tr-TR',
				format: 'dd/mm/yyyy',
				autoclose: true,
				todayHighlight: true
			}).datepicker('update', new Date());

		});

		$(document).ready(function () {

			$('a[data-bs-toggle="modal"]').on('click', function () {
				var urunId = $(this).data('urunid');
				$('#urunId').val(urunId);
			});

			// Kaydet butonuna tıklandığında
			$('#ürünMalzemeModal').on('click', '.btn-primary', function () {
				// Seçilen ürünlere ait miktar inputlarını al
				var secilenMalzemeler = [];
				$('.toggleInput:checked').each(function () {
					var miktarInput = $(this).closest('.timeline-panel').find('.dropdown .form-control');
					var miktar = miktarInput.val().trim();
					if (miktar !== '') {
						var malzemeAdi = $(this).closest('.timeline-panel').find('.form-check-label').text().trim();
						var malzemeObjesi = {};
						malzemeObjesi[malzemeAdi] = parseInt(miktar);
						secilenMalzemeler.push(malzemeObjesi);
					}
				});

				// Seçilen ürünlerin bilgilerini hidden inputa ekle
				$('#secilenMalzemeler').val(JSON.stringify(secilenMalzemeler));
			});


			// JavaScript kullanarak inputları göster/gizle
			document.querySelectorAll('.toggleInput').forEach(function (checkbox) {
				checkbox.addEventListener('change', function () {
					var input = this.closest('.timeline-panel').querySelector('input[type="text"]');
					if (this.checked) {
						input.style.display = 'block';
					} else {
						input.style.display = 'none';
					}
				});
			});
		});





	</script>
}

