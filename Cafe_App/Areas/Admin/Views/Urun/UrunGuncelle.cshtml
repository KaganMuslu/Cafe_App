
@{
    ViewData["Title"] = "Ürün Güncelle";
}
@model Urun


<h5 class="modal-title">Ürün Ekle</h5>
<button type="button" class="btn-close" data-bs-dismiss="modal">
</button>

<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col-lg-12 order-lg-1 input-primary">
								<h4 class="mb-3 text-black">Ürün Bilgileri</h4>

								<form asp-action="UrunGuncelle" enctype="multipart/form-data" class="needs-validation " method="post">
									<div style="margin-bottom:14px" class="row">
										<div class="form-floating col-md-6 mb-3">
											<input id="Ad" asp-for="Ad" type="text" class="form-control" placeholder="">
											<label for="Ad" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Adı</label>
											<div class="valid-feedback">Valid.</div>
											<div class="invalid-feedback">Please fill out this field.</div>
										</div>
										<div class="form-floating col-md-6 mb-3">
											<input id="Aciklama" asp-for="Aciklama" type="text" class="form-control" placeholder="" required="">
											<label for="Aciklama" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Açıklama</label>
											<div class="invalid-feedback">
												Zorunlu Alan
											</div>
										</div>
									</div>
									<div style="margin-bottom:14px" class="row">
										<div class="form-floating col-md-6 mb-3">
											<input id="Fiyat" asp-for="Fiyat" type="text" class="form-control" placeholder="" required="">
											<label for="Fiyat" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Fiyat</label>
											<div class="invalid-feedback">
												Zorunlu Alan
											</div>
										</div>
									</div>
									<div style="margin-bottom:14px" class="row">
										<div class="form-floating col-md-6 mb-3">
											<label for="formFile" class="form-label">&nbsp;&nbsp;&nbsp;Ürün Fotoğraf</label>
											<input asp-for="Fotograf" id="formFile" class="form-control" name="file" type="file">
											<div class="invalid-feedback">
												Zorunlu Alan
											</div>
										</div>
										<div class=" col-md-6 mb-3">
											<select id="KategoriId" name="KategoriId" asp-for="KategoriId" class="default-select form-control wide  required">
												<option selected>Ürün Kategori</option>
												@foreach (var item in ViewBag.Kategoriler)
												{
													<option value="@item.Id">@item.Ad</option>
												}
											</select>
											<div class="invalid-feedback">
												Zorunlu Alan
											</div>
										</div>
									</div>
									<input asp-for="Gorunurluk" type="hidden" class="form-control" placeholder="" value=True required="">
									<input asp-for="Akitf" type="hidden" class="form-control" placeholder="" value=True required="">
									<button type="submit" class="btn btn-primary">Kaydet</button>
								</form>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	// Fotoğraf
	document.querySelector("#formFile").onchange = function () {
		const fileName = this.files[0]?.name;
		const label = document.querySelector("label[for=formFile]");
		label.innerText = fileName ?? "Fotoğraf Yükle";
	};
</script>
