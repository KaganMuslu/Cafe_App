		$(function () {
			$("#datepicker2").datepicker({
				language: 'tr-TR',
				format: 'dd/mm/yyyy',
				autoclose: true,
				todayHighlight: true
			}).datepicker('update', new Date());

		});

		$(document).ready(function () {

			$('a[data-bs-toggle="modal"]').on('click', function () {
				var menuId = $(this).data('menuid');
				$('#menuId').val(menuId);
			});

			// Kaydet butonuna tıklandığında
			$('#menüMalzemeModal').on('click', '.btn-primary', function () {
				// Seçilen ürünlere ait miktar inputlarını al
				var secilenUrunler = [];
				$('.toggleInput:checked').each(function () {
					var miktarInput = $(this).closest('.timeline-panel').find('.dropdown .form-control');
					var miktar = miktarInput.val().trim();
					if (miktar !== '') {
						var urunAdi = $(this).closest('.timeline-panel').find('.form-check-label').text().trim();
						var urunObjesi = {};
						urunObjesi[urunAdi] = parseInt(miktar);
						secilenUrunler.push(urunObjesi);
					}
				});

				// Seçilen ürünlerin bilgilerini hidden inputa ekle
				$('#secilenUrunler').val(JSON.stringify(secilenUrunler));
			});


			// JavaScript kullanarak inputları göster/gizle
			document.querySelectorAll('.toggleInput').forEach(function (checkbox) {
				checkbox.addEventListener('change', function () {
					var input = this.closest('.timeline-panel').querySelector('input[type="text"]');
					if (this.checked) {
						input.style.display = 'block';
					} else {
						input.style.display = 'none';
					}
				});
			});
		});

		// Fotoğraf
		document.querySelector("#formFile").onchange = function () {
			const fileName = this.files[0]?.name;
			const label = document.querySelector("label[for=formFile]");
			label.innerText = fileName ?? "Fotoğraf Yükle";
		};



	</script>
