
@{
    ViewData["Title"] = "KategoriGuncelle";
}
@model Kategori


<h5 class="modal-title">Kategori Güncelle</h5>
<button type="button" class="btn-close" data-bs-dismiss="modal">
</button>

<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col-lg-12 order-lg-1 input-primary">
								<h4 class="mb-3 text-black">Ürün Bilgileri</h4>

								<form asp-action="KategoriGuncelle" enctype="multipart/form-data" class="needs-validation " method="post">

									<div style="margin-bottom:14px; text-align:center; margin:auto; width: 50%;" class="row">
										<div class="form-floating col-md-6 mb-3">
											<input id="Ad" asp-for="Ad" type="text" class="form-control" placeholder="">
											<label for="Ad" class="form-label">&nbsp;&nbsp;&nbsp;Malzeme Adı</label>
											<div class="invalid-feedback">
												Zorunlu Alan
											</div>
										</div>
									</div>
									<input asp-for="Gorunurluk" type="hidden" class="form-control" placeholder="" value=True required="">

									<button type="submit" class="btn btn-primary">Kaydet</button>
								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



